<odoo>
    <record id="view_game_resource_list" model="ir.ui.view">
        <field name="name">game.resource.list</field>
        <field name="model">game.resource</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category"/>
                <field name="price"/>
                <field name="availability"/>
            </list>
        </field>
    </record>

    <record id="view_game_resource_form" model="ir.ui.view">
        <field name="name">game.resource.form</field>
        <field name="model">game.resource</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="category"/>
                        <field name="price"/>
                        <field name="availability"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_player_inventory_list" model="ir.ui.view">
        <field name="name">player.inventory.list</field>
        <field name="model">player.inventory</field>
        <field name="arch" type="xml">
            <list>
                <field name="player_id"/>
                <field name="resource_id"/>
                <field name="purchase_date"/>
            </list>
        </field>
    </record>
</odoo>
