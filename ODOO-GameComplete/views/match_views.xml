<odoo>
    <record id="view_form_match" model="ir.ui.view">
        <field name="name">game.match.form</field>
        <field name="model">game.match</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="players_ids"/>
                        <field name="winner_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
